{
	"name": "web",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "pnpm run format && vite dev --open",
		"build": "vite build",
		"preview": "vite preview",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"serve:lhci": "node build"
	},
	"devDependencies": {
		"@playwright/test": "^1.39.0",
		"@sveltejs/adapter-auto": "^2.1.1",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.27.5",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.35.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"sass": "^1.69.5",
		"svelte": "^4.2.3",
		"svelte-check": "^3.6.0",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vitest": "^0.32.4"
	},
	"type": "module",
	"dependencies": {
		"@milkdown/core": "^7.3.1",
		"@milkdown/ctx": "^7.3.1",
		"@milkdown/plugin-clipboard": "^7.3.1",
		"@milkdown/plugin-cursor": "^7.3.1",
		"@milkdown/plugin-history": "^7.3.1",
		"@milkdown/plugin-listener": "^7.3.1",
		"@milkdown/plugin-math": "^7.3.1",
		"@milkdown/plugin-trailing": "^7.3.1",
		"@milkdown/preset-commonmark": "^7.3.1",
		"@milkdown/prose": "^7.3.1",
		"@milkdown/theme-nord": "^7.3.1",
		"@milkdown/transformer": "^7.3.1",
		"dotenv": "^16.3.1",
		"katex": "^0.16.9",
		"pnpm": "^8.10.4"
	}
}
